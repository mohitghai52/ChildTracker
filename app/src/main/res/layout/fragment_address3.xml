<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.childtracker.Address3"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="@drawable/address3">


    <EditText
        android:id="@+id/editTextAddress3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address (Relative 2)"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:padding="6dp"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd7ff"/>

    <EditText
        android:id="@+id/editTextCity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:padding="6dp"
        android:background="@android:color/transparent"
        android:inputType="textPersonName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd7ff"/>

    <EditText
        android:id="@+id/editTextState3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="State"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:padding="6dp"
        android:background="@android:color/transparent"
        android:inputType="textPersonName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd7ff"/>

    <EditText
        android:id="@+id/editTextMobile3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile No."
        android:layout_marginTop="20dp"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:padding="6dp"
        android:background="@android:color/transparent"
        android:inputType="phone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd7ff"/>

    <Button
        android:id="@+id/buttonFetchAddress3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:padding="8dp"
        android:background="@drawable/address3_buttons"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="Fetch Address" />


    <Button
        android:id="@+id/buttonSubmit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:padding="8dp"
        android:background="@drawable/address3_buttons"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonEdit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:padding="8dp"
        android:background="@drawable/address3_buttons"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="Edit" />
</LinearLayout>
